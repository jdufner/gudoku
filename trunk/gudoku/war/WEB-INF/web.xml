<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Gudoku</display-name>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>net.sf.gudoku.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/gudoku/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>SudokuService</servlet-name>
    <servlet-class>net.sf.gudoku.server.service.SudokuServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SudokuService</servlet-name>
    <url-pattern>/gudoku/sudoku</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Gudoku.html</welcome-file>
  </welcome-file-list>

</web-app>
